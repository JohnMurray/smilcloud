<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dip"
	android:layout_height="match_parent"
	android:layout_gravity="center" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >
		
		<Button
			android:id="@+id/source_button"
			android:text="Set Source"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="3dip" />
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			
			<TextView
				android:id="@+id/clip_offset_label"
				android:text="Clip Offset"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			<SeekBar
				android:id="@+id/clip_offset_bar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/clip_offset_label" />
			<TextView
				android:id="@+id/clip_begin_label"
				android:text="Clip Begin: 0s"
				android:paddingBottom="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/clip_offset_bar"
				android:layout_alignLeft="@id/clip_offset_bar" />
			<TextView
				android:id="@+id/clip_end_label"
				android:text="Clip End: 0s"
				android:paddingBottom="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/clip_offset_bar"
				android:layout_alignRight="@id/clip_offset_bar" />
			
		</RelativeLayout>
	
		<Button
			android:id="@+id/region_edit_button"
			android:text="Edit Region"
			android:padding="3dip"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/delete_button"
			android:text="Delete"
			android:padding="3dip"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		
	</LinearLayout>
</ScrollView>