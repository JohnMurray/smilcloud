<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dip"
	android:layout_height="match_parent"
	android:layout_gravity="center" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			
			<TextView
				android:id="@+id/uploader_label"
				android:text="Choose File"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			<EditText
				android:id="@+id/uploader_edit_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/uploader_label" />
			
		</RelativeLayout>
	
		<Button
			android:id="@+id/uploader_select_file_button"
			android:text="Find File"
			android:padding="3dip"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/uploader_upload_file_button"
			android:text="Upload File"
			android:padding="3dip"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		
	</LinearLayout>
</ScrollView>