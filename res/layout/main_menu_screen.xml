<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView android:text="Welcome to SMILCloud!" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:textSize="18px"
    	android:gravity="center_horizontal">
    </TextView>
    
    
    <Button android:text="Inbox" 
    	android:id="@+id/main_menu_inbox" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content">
    </Button>
    <Button android:text="Created Messages" 
    	android:id="@+id/main_menu_created_messages" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content">
    </Button>
    <Button android:text="Compose New Message" 
    	android:id="@+id/main_menu_compose_messages" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content">
    </Button>
    <Button android:text="Exit" 
    	android:id="@+id/main_menu_exit" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content">
    </Button>
    
</LinearLayout>